<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="pl.korotkevics.ships.client.gui.controllers.MainController">
    <GridPane fx:id="gridPane" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" percentHeight="15.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <GridPane alignment="CENTER" GridPane.columnIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   style="-fx-font-size: 30; -fx-font-family: monospace;" text="Battleships" textAlignment="CENTER">
                <padding>
                    <Insets top="10.0"/>
                </padding>
            </Label>
            <HBox alignment="CENTER_RIGHT" prefHeight="80.0" prefWidth="297.0" GridPane.columnIndex="1">
                <!--text="" is necessary here to hide JavaFX default text appearing nearby the button-->
                <Button fx:id="polishButton" layoutX="9.0" layoutY="9.0" mnemonicParsing="false"
                        onAction="#triggerPolishVersion" text="">
                    <Image fx:id="flagPoland" url="@../images/poland_flag.png"/>
                    <graphic>
                        <ImageView image="$flagPoland"/>
                    </graphic>
                </Button>
                <!--text="" is necessary here to hide JavaFX default text appearing nearby the button-->
                <Button fx:id="englishButton" layoutX="9.0" layoutY="9.0" mnemonicParsing="false"
                        onAction="#triggerEnglishVersion" text="">
                    <Image fx:id="flagUnitedKingdom" url="@../images/united_kingdom_flag.png"/>
                    <graphic>
                        <ImageView image="$flagUnitedKingdom"/>
                    </graphic>
                </Button>
            </HBox>
        </GridPane>
        <AnchorPane fx:id="mainPane" prefHeight="200.0" prefWidth="200.0"
                    GridPane.columnIndex="1" GridPane.rowIndex="1">
            <userData>
                <fx:reference source="controller"/>
            </userData>
        </AnchorPane>
    </GridPane>
</AnchorPane>
